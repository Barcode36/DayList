<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXCheckBox?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Screen?>
<?import javafx.scene.control.Control?>


<HBox fx:id="rootTaskData" alignment="CENTER_LEFT" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.daylist.controller.MiniTaskDataCellController">
    <fx:define>
        <Screen fx:factory="getPrimary" fx:id="screen" />
    </fx:define>
    <children>
        <VBox alignment="CENTER" style="-fx-background-color: #ECEFF1;">
            <children>
                <Label fx:id="dateTask" style="-fx-background-color: #CFD8DC;" text="no item selected" styleClass="qf-15-b">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Label>
                <Label fx:id="timeTask" layoutX="10.0" layoutY="10.0" text="no item selected" styleClass="qf-15-b">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </Label>
                <Label fx:id="labelTask" layoutX="10.0" layoutY="28.0">
                    <graphic>
                        <FontAwesomeIconView glyphName="CIRCLE" />
                    </graphic>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </Label>
            </children>
        </VBox>
        <HBox fx:id="contentContainer" prefWidth="${screen.VisualBounds.width*0.55}"  prefHeight="${Control.USE_COMPUTED_SIZE}" style="-fx-background-color: #ECEFF1;">
            <children>
                <VBox prefWidth="${contentContainer.width*0.9}" spacing="5.0">
                    <children>
                        <Label fx:id="titleTask" textOverrun="CLIP" wrapText="true"  styleClass="qf-15-b" text="no item selected" />
                        <Label fx:id="descriptionTask" textOverrun="CLIP" wrapText="true" styleClass="qf-13" text="no item selected" />
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </VBox>
                <HBox alignment="CENTER_RIGHT" spacing="15.0" >
                    <children>
                        <JFXCheckBox fx:id="checkTask"/>
                    </children>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </HBox>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </HBox>
    </children>
</HBox>
